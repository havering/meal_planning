<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Prep time</th>
    <th>Cook time</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @recipes.each do |recipe| %>
    <% if recipe.shared || recipe.user.id == current_user.id %>
      <tr>
        <td><%= link_to recipe.name, recipe %></td>
        <td><%= recipe.prep_time %> <%= recipe.prep_type %></td>
        <td><%= recipe.cook_time %> <%= recipe.cook_type %></td>
        <% if recipe.user.id == current_user.id %>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          <% else %>
        <td></td>
        <td></td>
          <% end %>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
