<p id="notice"><%= notice %></p>

<h1><%= @user.name %>'s Recipes</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="2">Prep time</th>
    <th colspan="2">Cook time</th>
    <th>Instructions</th>
    <th>Shared</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user_recipes.each do |recipe| %>
    <tr>
      <td><%= link_to recipe.name, recipe %></td>
      <td><%= recipe.prep_time %></td>
      <td><%= recipe.prep_type %></td>
      <td><%= recipe.cook_time %></td>
      <td><%= recipe.cook_type %></td>
      <td><%= recipe.instructions %></td>
      <% if recipe.shared %>
        <td>yes</td>
      <% else %>
        <td>no</td>
      <% end %>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', recipe, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
